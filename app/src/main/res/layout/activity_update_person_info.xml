<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.minidroid.moneymanager.ui.personalupdate.UpdatePersonInfoActivity">

    <include
        android:id="@+id/includes_personal"
        layout="@layout/header_personal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/update_tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号："
            android:padding="10dp"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"/>

        <me.james.biuedittext.BiuEditText
            android:id="@+id/update_et_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:padding="10dp"
            android:maxLength="25"
            android:singleLine="true"
            app:biu_duration="800"
            app:biu_text_color="#322236"
            app:biu_text_scale="1.5"
            app:biu_text_start_size="18sp"
            app:biu_type="flyup"/>

        <Button
            android:id="@+id/update_btn_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_skin"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#FFF"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>
