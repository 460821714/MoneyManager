<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/view_size_60"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/view_space_5"
    android:paddingLeft="@dimen/view_space_10"
    android:paddingRight="@dimen/view_space_10"
    android:paddingTop="@dimen/view_space_5">

    <ImageView
        android:id="@+id/item_account_detail_img"
        android:layout_width="@dimen/view_size_50"
        android:layout_height="@dimen/view_size_50" />

    <Space
        android:layout_width="@dimen/view_space_10"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_account_detail_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/font_size_15" />

            <Space
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/item_account_detail_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/key_down"
                android:textSize="@dimen/font_size_15" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_account_detail_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/key_down"
                android:textSize="@dimen/font_size_15" />

            <Space
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/item_account_detail_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/key_down"
                android:textSize="@dimen/font_size_15" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>